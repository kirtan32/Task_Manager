<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".employee.EmpProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">


            <androidx.cardview.widget.CardView
                android:id="@+id/profilepiccard"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="60dp">

                <ImageView
                    android:id="@+id/profilepic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/profileperson" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/profilename"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/profilepiccard"
                android:layout_marginTop="10dp"
                android:text="Name"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profileemail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/profilename"
                android:layout_marginTop="10dp"
                android:text="Email"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/profileidheader"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/profileemail"
                android:layout_marginTop="10dp"
                android:text="Employee Id"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/profileid"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/profileidheader"
                android:layout_marginTop="0dp"
                android:text="Employee Id"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="italic" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/profilelogout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/profileid"
                android:layout_marginStart="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="40dp"
                android:text="Log Out"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="27sp"
                android:textStyle="bold"
                app:cornerRadius="40dp" />
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>