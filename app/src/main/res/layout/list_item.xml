<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp"
        android:background="@color/card_1"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/cardtasktitle"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:text="Task"
                android:textSize="15sp"
                android:textColor="@color/gray"
                android:textStyle="italic"
                android:layout_alignParentTop="true"
                />

            <TextView
                android:id="@+id/taskHeader"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="8dp"
                android:text="Complete the task today"
                android:textColor="@color/black"
                android:ellipsize="end"
                android:maxLines="1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_below="@+id/cardtasktitle"
                />

            <TextView
                android:id="@+id/cardstartdt"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Start Date"
                android:textColor="@color/gray"
                android:layout_below="@+id/taskHeader"
                android:layout_marginLeft="15dp"
                />

            <TextView
                android:id="@+id/cardenddt"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="End Date"
                android:textColor="@color/gray"
                android:layout_below="@id/taskHeader"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/cardstartdt"
                />

            <ImageView
                android:id="@+id/cardImageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>